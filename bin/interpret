#!/usr/bin/env ruby
# frozen_string_literal: true

$:.unshift(File.expand_path("../lib", __dir__))
require "regular_expression"

pattern = RegularExpression::Pattern.new(ARGV.shift)
compiled = RegularExpression::Bytecode.compile(pattern.nfa)
interpreter = RegularExpression::Interpreter.new

ARGV.each do |string|
  puts "#{string}: #{interpreter.match?(compiled, string)}"
end
